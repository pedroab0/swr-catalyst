{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite", "ultracite/core", "ultracite/react"],
  "linter": {
    "rules": {
      "performance": {
        "noBarrelFile": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 20
          }
        }
      }
    }
  }
}
